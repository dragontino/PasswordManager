<resources>
    <!-- Base application theme. -->
    <style name="Theme.PasswordManager" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/raspberry</item>
        <item name="colorPrimaryDark">@color/raspberry</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="bottomSheetDialogTheme">@style/Theme.MaterialComponents.BottomSheetDialog</item>
        <!-- Customize your theme here. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.PasswordManager.Dark" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/header_dark</item>
        <item name="colorPrimaryDark">@color/header_dark</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="bottomSheetDialogTheme">@style/Theme.MaterialComponents.BottomSheetDialog</item>
    </style>

    <style name="Theme.PasswordManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PasswordManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PasswordManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AccountTextViewThemeWithoutMargin">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/text_view_style</item>
    </style>

    <style name="AccountTextViewTheme" parent="AccountTextViewThemeWithoutMargin">
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
    </style>

    <style name="MainTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:layout_margin">8dp</item>
    </style>



    <style name="AccountHeadingTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/account_name_placeholder</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:autofillHints">@string/account_name_placeholder</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>