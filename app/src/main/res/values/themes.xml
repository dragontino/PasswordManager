<resources>
    <!-- Base application theme. -->
    <style name="Theme.PasswordManager" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/raspberry</item>
        <item name="colorPrimaryDark">@color/raspberry</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/Theme.MaterialComponents.BottomSheetDialog</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.PasswordManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PasswordManager.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PasswordManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AccountTextViewTheme">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/text_view_style</item>
    </style>

    <style name="MainTextViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="NormalTextViewTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_view_normal_size</item>
        <item name="android:layout_margin">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="UtilityButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AccountHeadingTheme">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/account_hint</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:autofillHints">@string/account_hint</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Light" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:numbersInnerTextColor">@color/black</item>
        <item name="android:numbersTextColor">@color/black</item>
        <item name="android:numbersBackgroundColor">@color/light_gray</item>
    </style>

    <style name="Widget.MaterialComponents.TimePicker.Dark" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:numbersInnerTextColor">@color/white</item>
        <item name="android:numbersTextColor">@color/white</item>
        <item name="android:numbersBackgroundColor">@color/gray</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AboutButtons" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/raspberry</item>
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>

    <style name="SwitchDark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlActivated">@color/header_dark</item>
        <item name="colorSwitchThumbNormal">@color/light_gray</item>
        <item name="android:colorForeground">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogCornerRadius">6dp</item>
    </style>
</resources>