<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">
            
            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/motion_container"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                app:layoutDescription="@xml/list_item_main_text_view_scene">

                <ImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="4dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_baseline_right_arrow"
                    android:contentDescription="@string/more_info"/>

            </androidx.constraintlayout.motion.widget.MotionLayout>

            <ImageView
                android:id="@+id/website_image"
                android:src="@drawable/website_image"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:paddingEnd="4dp"
                android:contentDescription="@string/website_image"/>

            <include
                android:id="@+id/text_view"
                layout="@layout/layout_main_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"/>

        </LinearLayout>


        <ImageButton
            android:id="@+id/show_bottom_fragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@string/copy_info"
            android:minWidth="48dp"
            android:src="@drawable/ic_action_more" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bank_recycler_view_more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <include
        layout="@layout/divider_view"/>

</LinearLayout>