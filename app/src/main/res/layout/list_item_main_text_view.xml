<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/list_item_main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin">
            
            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/motion_container"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                app:layoutDescription="@xml/list_item_main_text_view_scene">

                <ImageView
                    android:id="@+id/list_item_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="4dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_baseline_right_arrow"
                    android:contentDescription="@string/more_info"/>

            </androidx.constraintlayout.motion.widget.MotionLayout>

            <include
                android:id="@+id/list_item_text_view"
                layout="@layout/layout_main_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"/>

        </LinearLayout>


        <Button
            android:id="@+id/list_item_button_more"
            android:layout_weight="3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_more"
            tools:ignore="InefficientWeight" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_item_recycler_view_more_info_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_item_recycler_view_more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>