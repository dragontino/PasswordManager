<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    style="@style/card_view_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_account"
            style="@style/AccountHeadingTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/login_head"
            style="@style/MainTextViewTheme"
            android:text="@string/login"
            android:textSize="@dimen/head_size" />

        <include
            android:id="@+id/login"
            layout="@layout/website_field"/>

        <TextView
            android:id="@+id/password_head"
            style="@style/MainTextViewTheme"
            android:text="@string/password"
            android:textSize="@dimen/head_size" />

        <include
            android:id="@+id/password"
            layout="@layout/website_field"/>

        <TextView
            android:id="@+id/comment_head"
            style="@style/MainTextViewTheme"
            android:text="@string/comment"
            android:textSize="@dimen/head_size" />

        <include
            android:id="@+id/comment"
            layout="@layout/website_field"/>

        <Button
            android:id="@+id/button_open_url"
            style="@style/MainTextViewTheme"
            android:text="@string/button_open_url"
            android:background="@drawable/button_style"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.cardview.widget.CardView>