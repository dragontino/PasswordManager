<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/edit_text"
        style="@style/MainTextViewTheme"
        android:textSize="@dimen/bank_card_item_text_size"
        android:minWidth="180dp"
        android:gravity="start"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="0dp" />

    <ImageButton
        android:id="@+id/button_visibility"
        android:layout_margin="8dp"
        android:contentDescription="@string/show_password"
        android:src="@drawable/visibility_on"
        android:background="@color/data_background_color"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <ImageButton
        android:id="@+id/field_item_button_copy"
        android:layout_margin="8dp"
        android:contentDescription="@string/copy_info"
        android:src="@drawable/file_copy"
        android:padding="5dp"
        android:backgroundTint="@color/data_background_color"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</LinearLayout>