<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.security.passwordmanager">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.PasswordManager">
        <activity
            android:name="com.security.passwordmanager.EmailPasswordActivity"
            android:label="@string/main_label">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name="com.security.passwordmanager.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.security.passwordmanager.ui.main.PasswordListActivity" />
        <activity
            android:name="com.security.passwordmanager.ui.account.PasswordActivity"
            android:label="@string/password_label"
            android:parentActivityName="com.security.passwordmanager.ui.main.PasswordListActivity" />
        <activity
            android:name="com.security.passwordmanager.ui.main.PasswordListActivity"
            android:label="@string/main_label"
            android:theme="@style/Theme.PasswordManager.NoActionBar">
        </activity>
    </application>

</manifest>