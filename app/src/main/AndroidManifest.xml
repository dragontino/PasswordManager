<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.security.passwordmanager">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.PasswordManager"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.DialogSaveActivity"
            android:exported="false"
            android:theme="@style/DialogTheme"/>
        <activity
            android:name=".ui.bank.BankCardActivity"
            android:exported="false"
            android:label="@string/bank_label" />
        <activity
            android:name=".TimePickerActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".EmailPasswordActivity"
            android:exported="true"
            android:label="@string/main_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_label"
            android:parentActivityName=".ui.main.PasswordListActivity" />
        <activity
            android:name=".ui.account.PasswordActivity"
            android:label="@string/password_label"
            android:parentActivityName=".ui.main.PasswordListActivity" />
        <activity
            android:name=".ui.main.PasswordListActivity"
            android:label="@string/main_label"
            android:theme="@style/Theme.PasswordManager.NoActionBar" />
    </application>

</manifest>